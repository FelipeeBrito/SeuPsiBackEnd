// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:sqlite123@localhost:5432/database"
}

model Costumers {
  id             String      @id @default(uuid())
  Name           String
  socialName     String
  profilePicture String
  gender         String
  cpf            String
  email          String
  birthdayDate   String
  city           String
  state          String
  country        String
  plan           String
  schedules      Schedules[]
}

model Schedules {
  id           String     @id @default(uuid())
  date         String
  professional String
  type         String
  situation    String
  customers    Costumers? @relation(fields: [customerId], references: [id])
  customerId   String?
}

model Plans {
  id              String   @id @default(uuid())
  title           String
  benefits        String[]
  buttonTitle     String
  headerTapeColor String
  price           String
}

model Professionals {
  id             String        @id @default(uuid())
  name           String
  profilePicture String
  jobTitle       String
  crp            String
  city           String
  state          String
  avaliation     Float
  language       String
  skills         String[]
  price          Float
  description    String
  socialMedias   SocialMedias[]
}

model SocialMedias {
  id             String         @id @default(uuid())
  instagram      String
  facebook       String
  linkedIn       String
  professionals  Professionals? @relation(fields: [professionalId], references: [id])
  professionalId String?
}
